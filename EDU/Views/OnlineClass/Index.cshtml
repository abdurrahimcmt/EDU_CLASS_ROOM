@model IEnumerable<EDU_Models.OnlineClassInfo>

<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Class List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="OnlineClass" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Class
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Class Title
                    </th>
                    <th>
                        Course Name
                    </th>
                    <th>
                        Semester Name
                    </th>
                    <th>
                        Department Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="50%">@obj.Title</td>
                    <td width="30%">@obj.courseInfo.Name</td>
                    <td width="30%">@obj.semesterInfo.Name</td>
                    <td width="30%">@obj.departmentInfo.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="OnlineClass" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-controller="OnlineClass" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="far fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Enrollment exists.</p>
    }

</div>

