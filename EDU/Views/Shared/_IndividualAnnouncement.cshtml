@model EDU_Models.Announcement
@using  EDU_Utility;
<div class="col-lg-12 col-md-12 pb-4 filter @Model.Title.Replace(' ','_')">
    <!-- Card-->
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
        <div class="card-header row">
            <div class="justify-content-center font-weight-bold pt-2 pb-2 bg-info" ><label class="float-left">@Model.Title</label></div>
        </div>
        
        <div class="card-body p-1 px-3 row">

            @Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.Massage))

            @if (Model.filePath != null)
            {
                <div class="col-10 p-1">
                    <iframe src="@WC.ImagePathAnnouncement@Model.filePath" width="100%" height="90%" style="border-radius:5px; border:1px solid #bbb"> </iframe>
                </div>
                <div class="col-2 p-1">
                    <a href="@WC.ImagePathAnnouncement@Model.filePath" target="_blank" class="btn btn-dark form-control btn-sm p-2" style="height:40px">Preview</a>
                </div>
            }


            @* <div class="col-6 p-1">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
        </div>*@
        </div>
    </div>
</div>

