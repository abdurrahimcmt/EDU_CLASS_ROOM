@model EDU_Models.ViewModels.CourseInfoVM
@using  EDU_Utility;
@{
    var title = "Create Course";
}

<form method="post" enctype="multipart/form-data">
    @if (Model.CourseInfo.Id != 0)
    {
        title = "Edit Batch";
        <input asp-for="CourseInfo.Id" hidden />
    }
    <div class="border p-3 bg-white">

        <div class="form-group row py-2">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="CourseInfo.Code"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CourseInfo.Code" class="form-control" />
                        <span asp-validation-for="CourseInfo.Code" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="CourseInfo.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CourseInfo.Name" class="form-control" />
                        <span asp-validation-for="CourseInfo.Name" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="CourseInfo.DepartmentId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="CourseInfo.DepartmentId" asp-items="@Model.DepartmentSelectList" class="form-select">
                            <option disabled selected>--Select Department--</option>
                        </select>
                        <span asp-validation-for="CourseInfo.DepartmentId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="CourseInfo.Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="CourseInfo.Description" class="form-control summernote"></textarea>
                        <span asp-validation-for="CourseInfo.Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row py-2">

                        <div class="col">
                            @if (Model.CourseInfo.Id != 0)
                            {
                                //update
                                <input type="submit" class="btn btn-info w-100" value="Update" />
                            }
                            else
                            {
                                //create
                                <input type="submit" onclick="return validateInput()" class="btn btn-primary w-100" value="Create" />
                            }

                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 ">
                @* Keep this empty *@
              
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height:250
            });
        });
        
    </script>
}