@model EDU_Models.ViewModels.EnrollmentVM
<form>
    <div class="container p-4 mb-3">
        <div>
            <div class="border bg-white p-3" style="border-radius:15px">
                <div class="row">
                    <div class="col-12">
                        <div class="row" style="padding-top:10px">
                            <div class="form-group row py-2">
                                <div class="col-4">
                                    <label asp-for="enrollmentInfo.StudentId"></label>
                                </div>
                                <div class="col-8">
                                    <select asp-for="enrollmentInfo.StudentId" asp-items="@Model.StudentSelectList" class="form-select">
                                        <option disabled selected>--Select StudentId--</option>
                                    </select>
                                    <span asp-validation-for="enrollmentInfo.StudentId" class="text-danger"></span>
                                </div>
                            </div>

                            @* <div class="form-group row py-2">
                                    <div class="col-4">
                                        <label asp-for="enrollmentInfo.semesterInfo"></label>
                                    </div>
                                    <div class="col-8">
                                        <select asp-for="enrollmentInfo.semesterInfo" asp-items="@Model.SemesterSelectList" class="form-select">
                                            <option disabled selected>--Select Semester--</option>
                                        </select>
                                        <span asp-validation-for="enrollmentInfo.semesterInfo" class="text-danger"></span>
                                    </div>

                                </div>*@

                            @*<div class="form-group row py-2">
                                    <div class="col-4">
                                        <label asp-for="enrollmentInfo.DepartmentId"></label>
                                    </div>
                                    <div class="col-8">
                                        <select asp-for="enrollmentInfo.DepartmentId" asp-items="@Model.DepartmentSelectList" class="form-select">
                                            <option disabled selected>--Select Department--</option>
                                        </select>
                                        <span asp-validation-for="enrollmentInfo.DepartmentId" class="text-danger"></span>
                                    </div>

                                </div>*@

                        </div>
                        <!--<div class="row pt-2">-->
                        @**@
                        <!--<div class="col-4">

                        </div>
                        <div class="offset-4 col-4">
                            <a asp-action="Search" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i>Courses</a>-->
                        @* <button asp class="h-100 btn btn-info form-control">
                                <i class="fas fa-search"></i>Search
                            </button>*@
                        <!--</div>
                        </div>-->
                    </div>
                </div>
            </div>
            @if (Model.CourseList.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" name="allcheck" id="selectAll" /> Select All
                            </th>
                            <th>
                                Code
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Department
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model.CourseList)
                        {
                            <tr>
                                <td width="10%">
                                    <input type="hidden" asp-for="@obj.takeCourses.Value" />
                                    <input asp-for="@obj.takeCourses.Selected" />
                                    <input type="hidden" asp-for="@obj.Id" />
                                </td>
                                <td width="30%">@obj.Code</td>
                                <td width="30%">@obj.Name</td>
                                <td width="30%">@obj.DepartmentName</td>

                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p> No Course exists.</p>
            }
        </div>
    </div>
</form>
@section scripts{
    <script>
        $(function () {
            $("#selectAll").click(function () {
                $("input[type=checkbox]").prop('checked', $(this).prop('checked'));
            });
            $("input[type=checkbox]").click(function () {
                if (!$(this).prop("checked")) {
                    $("selectAll").prop("checked",false);
                }
            });
        })

    </script>
}
