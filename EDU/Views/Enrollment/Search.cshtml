@model EDU_Models.ViewModels.EnrollmentVM
<form method="get">
    <div class="container p-4 mb-3">
        <div>
           
            <div class="border bg-white p-3" style="border-radius:15px">
                <div class="row"> 
                    <div class="col-12">
                        <div class="row" style="padding-top:10px">
                           
                            <div class="col-4">
                                @Html.Editor("Department", new { htmlAttributes = new { @class = "form-control", @placeholder = "Phone Number...." } })
                            </div>
                        </div>
                        <div class="row pt-2">
                           
                            <div class="offset-4 col-4">
                                <button type="submit" class="h-100 btn btn-info form-control">
                                    <i class="fas fa-search"></i>Search
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<hr />
<div class="bg-white py-3">
    <ejs-grid id="Grid" dataSource="@Model.CourseList"  allowSorting="true" allowPaging="true">
        <e-grid-filtersettings type="Menu"></e-grid-filtersettings>
        <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
        <e-grid-columns>
            <e-grid-column field="Id" headerText="ID" isPrimaryKey="true" textAlign="Right" width="100"></e-grid-column>
            <e-grid-column field="Code" headerText="Full Name" textAlign="Right"></e-grid-column>
            <e-grid-column field="Name" headerText="Phone Number" textAlign="Right"></e-grid-column>
            <e-grid-column field="DepartmentName" headerText="OrderStatus" textAlign="Right"></e-grid-column>
           @* <e-grid-column field="OrderDate" headerText="Order Date" customFormat="@(new { type="data",format="mm/dd/yyyy"})" textAlign="Right"></e-grid-column>
            <e-grid-column field="Id" headerText="" width="70"
                           template="<a rel='nofollow' href='Order/Details/${Id}' class='btn btn-primary'> <i class='fas fa-list'></i></a>">
            </e-grid-column>*@
        </e-grid-columns>
    </ejs-grid>

</div>